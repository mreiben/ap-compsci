/**
 * JM p.98 #8
 * 
 * @author jason
 *
 */
public class Circle
{
  private int radius;

  public Circle(int r)
  {
    radius = r;
  }

  public int getRadius()
  {
    return radius;
  }

  public double getArea()
  {
    return (double) (radius * radius) * Math.PI;
  }

  public String toString() // this method is already part of the Object class
  {
    return "Circle: radius=" + radius;
  }
}
